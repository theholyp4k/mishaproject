<Window x:Class="TourismRoute.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourismRoute"
        mc:Ignorable="d"
        Title="User" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridUsers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,217" HorizontalAlignment="Right" Width="800"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Margin="192,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="359,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="IDComboBox" HorizontalAlignment="Left" Margin="359,284,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="523,246,0,0" VerticalAlignment="Top" Click="AddButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="523,286,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
