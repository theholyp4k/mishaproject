<Window x:Class="TourismRoute.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourismRoute"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Login and Registration" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LogTXT" HorizontalAlignment="Center" Margin="0,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PassTXT" HorizontalAlignment="Center" Margin="0,199,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="RegBTN" Content="Registration" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="LogBTN" Content="Login" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Click="EnterButton_Click"/>
    </Grid>
</Window>
